<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head') %>
<body>
		
	<% if (locals.user != undefined) { %>
	  
	<%- include('./partials/headerLogueado') %>
		  <% } else { %>
		 <%- include('./partials/header') %>
	<% } %>

	<% for( let i = 0; i < Product.length; i++ ) { %>
		<div class="col-12">
			<section class="product-box">
				<a href="/detalle/<% Product[i].id %>">
					<article class="product-box_image">
					<img src="<%= Product[i].imagen %>" alt="<%= Product[i].titulo %>">
				</article>
				<article class="product-box_data">
					<h2><%= Product[i].titulo %></h2>
					<p><%= Product[i].descripcion %></p>
					<h3><a href="">Nombre de usuario: <% Product[i].user_id %></a></h3>
				</article>
				</a>
			</section>
		</div>
	<% } %>


	<!-- footer -->
	<footer class="main-footer">
		<%- include('./partials/footer') %>
	</footer>
	<!-- /footer -->
</body>

</html>