<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<%- include('./partials/head') %>
</head>

<body>
	<!-- Header -->
	<header class="main-header">
		<% if (locals.user != undefined) { %>
  
			<%- include('./partials/headerLogueado') %>
		
		  <% } else { %>
			 
			<%- include('./partials/header') %>
		
		  <% } %>
	</header>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			 <% if(Product.length>0) { %>
				<% for (let i = 0; i < Product.length; i++) { %>
					
					<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/<%= Product[i].id %>"><%= Product[i].user.nombre %>
						<figure class="product-box_image">
							<img src="images/products/<%= Product[i].imagen %>" alt="<%= Product[i].titulo  %>">
						</figure>
						<article class="product-box_data">
							<h2><%= Product[i].titulo %></h2>
							<p><%= Product[i].descripcion%></p>
							
							
							
						</article>
					</a>
				</section>
			</div>
					
			 <% } %>
				
			<% } else { %>
            <p>No hay productos disponibles.</p>
            <% } %>
			
			
		</div>
	</div>


	<!-- footer -->
	<footer class="main-footer">
		<%- include('./partials/footer') %>
	</footer>
	<!-- /footer -->
</body>	
</html>